<div class="container mx-auto p-4" data-controller="calculator">
  <h1 class="text-2xl font-bold mb-4">Mortgage Calculator</h1>

  <div>
    <label class="block">Loan Amount ($):</label>
    <input type="number" value="200000" class="border p-2 w-full" data-calculator-target="loanAmount">
  </div>

  <div>
    <label class="block">Annual Interest Rate (%):</label>
    <input type="number" value="5" class="border p-2 w-full" data-calculator-target="interestRate">
  </div>

  <div>
    <label class="block">Loan Term (Years):</label>
    <input type="number" value="30" class="border p-2 w-full" data-calculator-target="years">
  </div>

  <button class="bg-blue-500 text-white px-4 py-2 mt-4" data-action="click->calculator#calculate">
    Calculate
  </button>

  <p class="mt-4 text-xl font-semibold">Monthly Payment: <span data-calculator-target="result">-</span></p>
</div>
